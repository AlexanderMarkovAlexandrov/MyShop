@model CreateMerchantFormModel

@{
    ViewBag.Title = "Create Merchant";
}

<div class="row">
    <div class="col-sm-12 offset-2 col-md-8 offset-3 col-xl-6">
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="text-danger" asp-validation-summary="All"></div>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" placeholder="Write your Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="+359-888-888-888">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}